<Page x:Class="VirtualDisplay.Setup.Pages.AddBtnPages.AddBtnPage3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VirtualDisplay.Setup.Pages.AddBtnPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBtnPage3" Unloaded="UnloadedPage">

    <Grid>
        <StackPanel>
            <TextBlock Name="namebtn_tb" Text="Название парных кнопок: " Style="{StaticResource MaterialDesignBody2TextBlock}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 20 0 0" />
            <TextBlock Name="statusbtn_tb" Text="Статус сохранения кнопки вызов: " Style="{StaticResource MaterialDesignBody2TextBlock}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 10 0 60" />
            
            <TextBlock Name="page3_tb" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MaterialDesignHeadline5TextBlock}">
                Нажмите на кнопку - отмена
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
